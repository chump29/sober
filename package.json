{
  "name": "sober",
  "version": "1.0.2",
  "description": "Sobriety tracker",
  "homepage": "https://github.com/chump29/sober",
  "license": "GPL-3.0-only",
  "author": "Chris Post",
  "keywords": [
    "sober",
    "sobriety",
    "time",
    "tracker"
  ],
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chump29/sober.git"
  },
  "scripts": {
    "build": "vite build && pnpm run build:banner",
    "build:banner": "add-dist-header --recursive --delimiter=‚óè --ext=.css,.html,.js dist",
    "build:dev": "vite",
    "clean": "rimraf dist node_modules",
    "lint": "pnpm run lint:eslint && pnpm run lint:pretty && pnpm run lint:html && pnpm run lint:css && pnpm run lint:md",
    "lint:css": "stylelint **/*.css --fix",
    "lint:eslint": "eslint ./src --fix",
    "lint:html": "html-validator --exclude=dist --ignore-config=.htmlignore",
    "lint:md": "markdownlint **/*.md --fix",
    "lint:pretty": "prettier . --write",
    "precommit": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
