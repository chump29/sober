    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.40.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-json": "^4.2.0",
    "rimraf": "^6.1.2",
